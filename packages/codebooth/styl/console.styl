/* console */
.lqv-console
  color #000
  grid-area console
  overflow-y auto
  overflow-wrap anywhere
  white-space pre-wrap

  // header
  > header
    color #FFF
    background-color #333
    font-family sans-serif
    padding .2em .4em
    width 100%
    display block

  // output
  > output
    > pre
      border-bottom 1px solid #eee
      display block
      padding .1em .4em
      width 100%
      color #000
    
      &.error
        color #F00

// special spans
.lqv-console > output > pre
  span
    display inline-block

    &.array, &.object
      color #479bee

    &.number
      color green

    &.string
      color #e438bc

    &.undefined
      color #aaa

    ol
      display inline
      list-style-type none

      > li
        display inline

        &:not(:last-child)::after
          color #000
          content ", "

/* html preview */
.lqv-preview
  background #FFF
  grid-area console
  height 100%
  width 100%
  border-left 1px solid #ddd

/* html console */
.lqv-preview + .lqv-console
  left var(--split)
  height var(--v-split)
  grid-area none
  width calc(100% - var(--split))
  position absolute
  bottom 0
